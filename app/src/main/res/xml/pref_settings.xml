<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="checklist_switch"
        android:title="@string/pref_title_enable_checklist"
        />

    <ListPreference
        android:dependency="checklist_switch"
        android:defaultValue="Daily"
        android:entries="@array/pref_checklist_frequency"
        android:entryValues="@array/pref_checklist_frequency_values"
        android:key="checklist_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_checklist_frequency"
        android:summary="%s"
        />

</PreferenceScreen>